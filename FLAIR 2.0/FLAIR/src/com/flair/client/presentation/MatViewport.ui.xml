	xmlns:flair="urn:import:com.flair.client.presentation.widgets"
	xmlns:flair.pak="urn:import:com.flair.client.presentation.widgets.sliderbundles">
	<ui:style>
	@external side-nav, active;
	body {
		background-color: #e9e9e9;
		overflow: auto !important;
	}
	
	.side-nav li.active {
		border-left: 4px solid #757575;
	}
	
	.bordered {
		border-left: 2px solid #e9e9e9;
	}
	
	.animation {
		transition: 0.4s all;
		-webkit-transition: 0.4s all;
		-moz-transition: 0.4s all;
	}
	</ui:style>
	<g:HTMLPanel>
		<m:MaterialNavBar width="100%">
			<m:MaterialNavSection float="LEFT">
			<m:MaterialSearch placeholder="Component" 
				backgroundColor="WHITE" iconColor="BLACK" active="true" grid="l3" shadow="1"/>
			</m:MaterialNavSection>
			
			<m:MaterialNavSection float="RIGHT">
				<m:MaterialLink iconType="ACCOUNT_CIRCLE"
					iconPosition="LEFT" text="Login" textColor="WHITE" waves="LIGHT" />
				
				<m:MaterialTooltip text="Starter">
					<m:MaterialLink iconType="MORE_VERT" textColor="WHITE"
						waves="LIGHT" />
				</m:MaterialTooltip>
			</m:MaterialNavSection>
		</m:MaterialNavBar>
		
		<m:MaterialNavBar width="100%">
			<m:MaterialNavSection float="LEFT">
