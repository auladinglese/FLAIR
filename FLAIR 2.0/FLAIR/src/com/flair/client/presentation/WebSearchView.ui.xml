<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:select="urn:import:org.gwtbootstrap3.extras.select.client.ui">
	
	<g:HTMLPanel>
		<b:Container fluid="true">
			<b:Row>
				<b:Column size="MD_2">
					<b:Form>
						<b:FieldSet>				
							<b:FormGroup>
								<g:FlowPanel>
									<select:Select ui:field="selResultLangUI">
										<select:Option ui:field="selResultLangItmEnUI" text="English" value="ENGLISH" />
										<select:Option ui:field="selResultLangItmDeUI" text="German" value="GERMAN" />
									</select:Select>
								</g:FlowPanel>
							</b:FormGroup>
						</b:FieldSet>
					</b:Form>
				</b:Column>
				
				<b:Column size="MD_8">
					<b:Form>
						<b:FieldSet>				
							<b:FormGroup>
								<g:FlowPanel>
									<b:TextBox ui:field="txtSearchBoxUI" placeholder="Search"/>
								</g:FlowPanel>
							</b:FormGroup>
						</b:FieldSet>
					</b:Form>
				</b:Column>
				
				<b:Column size="MD_2">
					<b:Form>
						<b:FieldSet>
							<b:FormGroup>
								<g:FlowPanel>
									<select:Select ui:field="selResultCountUI">
										<select:Option ui:field="selResultCountItm10UI" text="10 Results" value="10" />
										<select:Option ui:field="selResultCountItm20UI" text="20 Results" value="20" />
										<select:Option ui:field="selResultCountItm30UI" text="30 Results" value="30" />
										<select:Option ui:field="selResultCountItm40UI" text="40 Results" value="40" />
										<select:Option ui:field="selResultCountItm50UI" text="50 Results" value="50" />
									</select:Select>
								</g:FlowPanel>
							</b:FormGroup>
						</b:FieldSet>
					</b:Form>
				</b:Column>
			</b:Row>
		</b:Container>
		
		<g:ScrollPanel ui:field="pnlRankerContainerUI"/>
	</g:HTMLPanel>
	
</ui:UiBinder> 