<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui" xmlns:b="urn:import:org.gwtbootstrap3.client.ui"
	xmlns:b.gwt="urn:import:org.gwtbootstrap3.client.ui.gwt" xmlns:b.html="urn:import:org.gwtbootstrap3.client.ui.html">

	<ui:style>
	.center-text {
		text-align: center;
	}
	
	.header-align-right {
		float: right;
		text-align: right;
	}
	
	.header-align-left {
		float: left;
		text-align: left;
	}
	
	.docText-preview {
		height: 400px;
	}
	
	.placeholder-inner {
		margin-left: auto;
		margin-right: auto;
		padding-top: 30vh;
		padding-left: 10px;
		padding-right: 10px;
	}
	
	.placeholder-icon {
		margin-right: 10px;
	}
	</ui:style>

	<g:HTMLPanel>
		<g:FlowPanel ui:field="pnlPlaceholderUI" styleName="{style.placeholder-inner}">
				<b:Heading size="H5" addStyleNames="{style.center-text}">
					<b:Icon type="SPINNER" spin="true" addStyleNames="{style.placeholder-icon}"/>
					<g:InlineLabel ui:field="lblPlaceholderTextUI" text="select a result to preview it" />
				</b:Heading>
		</g:FlowPanel>

		<b:Container ui:field="pnlPreviewContainerUI" fluid="true">
			<b:Row>
				<b:Column size="MD_12">
					<b:Panel>
						<b:PanelHeader>
							<b:Heading size="H3">
								<b.html:Strong ui:field="lblDocTitleUI" text="title" />
								<b.html:Strong ui:field="lblDocLevelUI"
									addStyleNames="{style.header-align-right}" text="level" />
							</b:Heading>

							<b.html:Small ui:field="lblDocNumSentencesUI"
								addStyleNames="{style.header-align-left}" text="sentence count" />
							<b.html:Small ui:field="lblDocNumWordsUI"
								addStyleNames="{style.header-align-right}" text="word count" />
							<b.html:Br />
						</b:PanelHeader>

						<b:PanelBody>
							<b:Icon ui:field="icoHelpTextUI" 
								addStyleNames="{style.header-align-right}" type="QUESTION_CIRCLE" title="help text"/>
							<g:ScrollPanel addStyleNames="{style.docText-preview}">
								<g:HTML ui:field="htmlDocTextPreviewUI">
									<br />
								</g:HTML>
							</g:ScrollPanel>
							<g:FlowPanel ui:field="pnlWeightSelectionUI"/>
						</b:PanelBody>

						<b:PanelFooter ui:field="pnlFooterUI">
							<b:PanelGroup>
								<b:Panel>
									<b:PanelHeader>
										<b:Heading size="H4">
											<b:Anchor ui:field="tglConstructionDetailsUI"
												dataToggle="COLLAPSE" dataTarget="#collapseConstDetails"
												text="construction details" />
											<b:Icon type="TABLE" addStyleNames="{style.header-align-right}" />
										</b:Heading>
									</b:PanelHeader>

									<b:PanelCollapse b:id="collapseConstDetails">
										<b:PanelBody ui:field="pnlConstructionDetailsUI"/>
									</b:PanelCollapse>
								</b:Panel>
							</b:PanelGroup>
						</b:PanelFooter>
					</b:Panel>
				</b:Column>
			</b:Row>
		</b:Container>
	</g:HTMLPanel>
</ui:UiBinder> 