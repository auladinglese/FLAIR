			</b:ModalBody>
			
			<b:ModalFooter>
				<b:Button type="PRIMARY" dataDismiss="MODAL">Close</b:Button>
			</b:ModalFooter>
		</b:Modal>	
		<b:Modal ui:field="mdlAboutDeUI" closable="true" fade="true" dataBackdrop="STATIC" dataKeyboard="true" b:id="modalAboutDe">
