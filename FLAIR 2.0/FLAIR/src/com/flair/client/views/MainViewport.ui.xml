				</b:NavbarBrand>
				<b:NavbarCollapseButton dataTarget="#navbar-collapse" />
			</b:NavbarHeader>
		
			<b:NavbarCollapse b:id="navbar-collapse">
				<b:NavbarNav>
					<b:AnchorListItem ui:field="btnWebSearchUI">Web Search</b:AnchorListItem>
					<b:AnchorListItem ui:field="btnUploadUI">Upload</b:AnchorListItem>
					<b:AnchorListItem ui:field="btnAboutUI">About</b:AnchorListItem>	
				</b:NavbarNav>
		
				<b:NavbarNav pull="RIGHT">
					<b:ListDropDown>
						<b:AnchorButton ui:field="btnSwitchLangUI" dataToggle="DROPDOWN">Language</b:AnchorButton>
