<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html"
	xmlns:flair="urn:import:com.flair.client.presentation.widgets"
	xmlns:m.overlay="urn:import:gwt.material.design.addins.client.overlay">
	
	<ui:style>
	.brand-logo {
		padding: 1px 1px 1px 1px;
		height: 200px;
	}
	
	.panel-navSearch {
		padding-top: 4px;
	}
	
	.panel-defaultPlaceholder {
		margin-left: auto;
		margin-right: auto;
	}
	
	.global-animation {
		transition: 0.4s all;
		-webkit-transition: 0.4s all;
		-moz-transition: 0.4s all;
	}	
	</ui:style>
	
	<m:MaterialPanel ui:field="pnlRootUI" backgroundColor="WHITE" overflow="HIDDEN">		
		<m:MaterialSplashScreen ui:field="splSplashUI" backgroundColor="WHITE" depth="5000" textAlign="CENTER">
			<g:HTML ui:field="htmlSplashLogoUI">
				<img class="{style.brand-logo}" src="img/logo_2.png"/>
			</g:HTML>
            <m:MaterialTitle ui:field="lblSplashStatus" title="Loading..." textColor="BLACK"/>
        </m:MaterialSplashScreen>
	
		<m:MaterialHeader depth="996" layoutPosition="FIXED" width="100%">
			<!-- Main Navbar -->
			<m:MaterialNavBar ui:field="navMainUI" backgroundColor="ORANGE">
				<m:MaterialLink ui:field="tglSettingsPaneUI" iconType="MENU" waves="LIGHT" paddingLeft="7" />
				<m:MaterialNavBrand ui:field="btnAboutUI" marginLeft="5" href="javascript:void(0)" text="FLAIR"/>
				
				<m:MaterialLink ui:field="btnSwitchLangUI" activates="lang-selector" iconType="LANGUAGE" waves="LIGHT" float="RIGHT"/>
			</m:MaterialNavBar>		
		</m:MaterialHeader>
						
		<!-- UI Language Dropdown -->
		<m:MaterialDropDown activator="lang-selector" constrainWidth="true">
			<m:MaterialLink ui:field="btnLangEnUI" waves="DEFAULT" text="English"/>
			<m:MaterialLink ui:field="btnLangDeUI" waves="DEFAULT" text="German"/>
		</m:MaterialDropDown>
		
		<!-- Main FAB -->
		<m:MaterialFAB ui:field="fabMainActionsUI" axis="VERTICAL" depth="998">
			<m:MaterialButton ui:field="btnWebSearchUI"
				type="FLOATING" iconType="SEARCH" size="LARGE" backgroundColor="ORANGE" waves="LIGHT"/>
			<m:MaterialFABList>
				<m:MaterialAnchorButton ui:field="btnUploadUI" 
					type="FLOATING" waves="LIGHT" backgroundColor="BLUE" iconType="FILE_UPLOAD"/>
			</m:MaterialFABList>
		</m:MaterialFAB>
				
		<!-- Web Search Modal -->
		<m:MaterialModal ui:field="mdlWebSearchUI" type="BOTTOM_SHEET" dismissible="true">
			<m:MaterialModalContent>
				<!-- Minimum absolute height to prevent the result count dropdown from clipping -->
				<m:MaterialRow height="170px">
					<m:MaterialColumn grid="l6 m6 s12">
						<m:MaterialTextBox ui:field="txtSearchBoxUI" iconType="SEARCH"/>					
					</m:MaterialColumn>
					
					<m:MaterialColumn grid="l3 m3 s12">
						<m:MaterialListBox ui:field="selResultLangUI">
							<m.html:Option ui:field="selResultLangItmEnUI" text="English" value="ENGLISH" />
							<m.html:Option ui:field="selResultLangItmDeUI" text="German" value="GERMAN" />
						</m:MaterialListBox>
					</m:MaterialColumn>
					
					<m:MaterialColumn grid="l3 m3 s12">
						<m:MaterialListBox ui:field="selResultCountUI" >
							<m.html:Option ui:field="selResultCountItm10UI" text="10" value="10" />
							<m.html:Option ui:field="selResultCountItm20UI" text="20" value="20" />
							<m.html:Option ui:field="selResultCountItm30UI" text="30" value="30" />
							<m.html:Option ui:field="selResultCountItm40UI" text="40" value="40" />
							<m.html:Option ui:field="selResultCountItm50UI" text="50" value="50" />
						</m:MaterialListBox>
					</m:MaterialColumn>
				</m:MaterialRow>				
			
				<m:MaterialModalFooter>
					<m:MaterialButton ui:field="btnDoWebSearchUI" text="Search" backgroundColor="ORANGE" textColor="WHITE" waves="DEFAULT" />
					<m:MaterialButton ui:field="btnCloseWebSearchUI" text="Cancel" type="FLAT" waves="DEFAULT" />
				</m:MaterialModalFooter>			
			</m:MaterialModalContent>
		</m:MaterialModal>
		
		<!-- Corpus Upload Modal-->
		<flair:CorpusFileUploader ui:field="mdlCorpusUploadUI"/>
		
		<!-- Settings Pane -->
		<flair:RankerSettingsPane ui:field="pnlConstructionsSettingsUI"/>
		
		<m:MaterialPanel ui:field="pnlResultsContainerUI" backgroundColor="WHITE" layoutPosition="RELATIVE" overflow="HIDDEN"
			marginBottom="0" grid="l5 m5 s5" padding="20" addStyleNames="{style.global-animation}">
			<!-- Results Pane-->
			<flair:DocumentResultsPane ui:field="pnlDocResultsUI"/>
		</m:MaterialPanel>
		
		<!-- Preview Pane -->
		<flair:DocumentPreviewPane ui:field="pnlDocPreviewUI"/>
		
		<!-- Custom Keywords Editor Modal -->
		<flair:CustomKeywordsEditor ui:field="mdlCustomKeywordsUI"/>
		
		<!-- Visualizer Modal -->
		<flair:DocumentCollectionVisualizer ui:field="mdlVisualizerUI"/>
		
		<!-- Url Exporter Modal -->
		<flair:SettingsExporter ui:field="mdlExporterUI"/>
		
		<!-- Prompt Modal -->
		<flair:ModalPrompt ui:field="mdlPromptUI"/>
	
		<!-- Overlay Modal -->
		<m.overlay:MaterialOverlay ui:field="mdlOverlayUI"/>
		
		<!-- Default Pane -->
		<m:MaterialRow ui:field="pnlDefaultPlaceholderUI" visible="false" 
			marginTop="70" padding="20" grid="l12 m12 s12"
			addStyleNames="{style.panel-defaultPlaceholder}">
			<m:MaterialRow>
				<m:MaterialColumn grid="l3 m3" hideOn="HIDE_ON_SMALL_DOWN">
					<m:MaterialCard/>
				</m:MaterialColumn>
				
				<m:MaterialColumn grid="l6 m6 s12">
					<m:MaterialCard backgroundColor="BLUE">
						<m:MaterialCardContent textColor="WHITE">
							<m:MaterialCardTitle ui:field="lblDefaultSearchTitleUI" text="Search" iconType="SEARCH"
								iconPosition="RIGHT" />
								
							<m:MaterialLabel ui:field="lblDefaultSearchCaptionUI"
								text="Click on the Search icon on top and type in a query. FLAIR will fetch the top results from the Bing Search Engine." />
						</m:MaterialCardContent>
					</m:MaterialCard>
				</m:MaterialColumn>
				
				<m:MaterialColumn grid="l3 m3" hideOn="HIDE_ON_SMALL_DOWN">
					<m:MaterialCard/>
				</m:MaterialColumn>
			</m:MaterialRow>

			<m:MaterialRow>
				<m:MaterialColumn grid="l3 m3" hideOn="HIDE_ON_SMALL_DOWN">
					<m:MaterialCard/>
				</m:MaterialColumn>
				
				<m:MaterialColumn grid="l6 m6 s12">
					<m:MaterialCard backgroundColor="ORANGE">
						<m:MaterialCardContent textColor="WHITE">
							<m:MaterialCardTitle ui:field="lblDefaultConfigTitleUI" text="Configure" iconType="SETTINGS"
								iconPosition="RIGHT" />
								
							<m:MaterialLabel ui:field="lblDefaultConfigCaptionUI"
								text="Configure the settings: text (complexity, length) and language (the passive, wh- questions, academic vocabulary, ...). You can export the settings to apply them to all further searches." />
						</m:MaterialCardContent>
					</m:MaterialCard>
				</m:MaterialColumn>
				
				<m:MaterialColumn grid="l3 m3" hideOn="HIDE_ON_SMALL_DOWN">
					<m:MaterialCard/>
				</m:MaterialColumn>
			</m:MaterialRow>
			
			<m:MaterialRow>
				<m:MaterialColumn grid="l3 m3" hideOn="HIDE_ON_SMALL_DOWN">
					<m:MaterialCard/>
				</m:MaterialColumn>
				
				<m:MaterialColumn grid="l6 m6 s12">
					<m:MaterialCard backgroundColor="GREEN">
						<m:MaterialCardContent textColor="WHITE">
							<m:MaterialCardTitle ui:field="lblDefaultReadTitleUI" text="Read" iconType="CHROME_READER_MODE"
								iconPosition="RIGHT" />
								
							<m:MaterialLabel ui:field="lblDefaultReadCaptionUI"
								text="FLAIR will re-rank the documents according to the configured settings. Click on the link to open the page in a new tab or read the enhanced text in the right-side panel." />
						</m:MaterialCardContent>
					</m:MaterialCard>
				</m:MaterialColumn>
				
				<m:MaterialColumn grid="l3 m3" hideOn="HIDE_ON_SMALL_DOWN">
					<m:MaterialCard/>
				</m:MaterialColumn>
			</m:MaterialRow>			
		</m:MaterialRow>

