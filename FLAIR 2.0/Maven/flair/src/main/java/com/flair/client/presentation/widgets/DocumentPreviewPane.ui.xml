<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
	xmlns:g="urn:import:com.google.gwt.user.client.ui"
	xmlns:m="urn:import:gwt.material.design.client.ui"
	xmlns:m.html="urn:import:gwt.material.design.client.ui.html">

	<ui:style>
	.docText-preview {
		height: 400px;
		border: 2px solid #e9e9e9;
		margin-bottom: 15px;
	}
	
	.bordered {
		border-left: 2px solid #e9e9e9;
	}
	
	.animation {
		transition: 0.4s all;
		-webkit-transition: 0.4s all;
		-moz-transition: 0.4s all;
	}
	</ui:style>
	
	<m:MaterialPanel ui:field="pnlRootUI" layoutPosition="RELATIVE" grid="l12 m12 s12">
		<m:MaterialRow ui:field="pnlPreviewContainerUI" overflow="AUTO" layoutPosition="FIXED" grid="l4 m4 s12"
			depth="995" padding="20" height="100%" width="450px" top="68" right="-450"
			addStyleNames="{style.bordered} {style.animation}" backgroundColor="WHITE" shadow="3">
			<m:MaterialRow textAlign="RIGHT">
				<m:MaterialIcon ui:field="icoHelpTextUI" iconType="HELP" paddingRight="20"/>
				<m:MaterialIcon ui:field="icoCloseUI" iconType="CLOSE"/>
			</m:MaterialRow>		
						
			<!-- Header Info -->
			<m:MaterialRow textAlign="CENTER">
				<m:MaterialLabel ui:field="lblDocTitleUI" fontSize="1.4em" 
							textColor="GREY_DARKEN_1" text="Document Title"/>
				
				<m:MaterialRow paddingTop="10">
					<m:MaterialChip ui:field="lblDocLevelUI" text="A1-B1-C1"/>	
					<m:MaterialChip ui:field="lblDocNumSentencesUI" text="Sentences" marginLeft="10" marginRight="10"/>
					<m:MaterialChip ui:field="lblDocNumWordsUI" text="Words"/>
				</m:MaterialRow>
			</m:MaterialRow>
			
			<!-- Preview Pane -->
			<m:MaterialRow>				
				<g:ScrollPanel ui:field="pnlDocTextPreviewUI" addStyleNames="{style.docText-preview}"/>				
				<g:FlowPanel ui:field="pnlWeightSelectionUI"/>
			</m:MaterialRow>
			
			<!-- Construction Details Pane -->
			<m:MaterialRow ui:field="pnlFooterUI" marginTop="15" paddingTop="20">
				<m:MaterialCollapsible grid="s12 m12 l12">
					<m:MaterialCollapsibleItem>
						<m:MaterialCollapsibleHeader>
							<m:MaterialLink ui:field="tglConstructionDetailsUI" iconType="DETAILS" iconPosition="LEFT" textColor="BLACK"/>
						</m:MaterialCollapsibleHeader>
						
						<m:MaterialCollapsibleBody ui:field="pnlConstructionDetailsUI"/>
					</m:MaterialCollapsibleItem>
				</m:MaterialCollapsible>
			</m:MaterialRow>
		</m:MaterialRow>
	</m:MaterialPanel>
</ui:UiBinder> 