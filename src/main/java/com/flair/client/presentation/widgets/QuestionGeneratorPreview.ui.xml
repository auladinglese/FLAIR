<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:g="urn:import:com.google.gwt.user.client.ui"
             xmlns:m="urn:import:gwt.material.design.client.ui"
             xmlns:ma="urn:import:gwt.material.design.addins.client"
>

    <ui:style>
        .target-iframe {
            width: 85%;
            height: 85%;
            box-shadow: 0 0 15px rgb(238, 178, 124);
            border: 1px solid rgb(238, 172, 82);
        }
    </ui:style>

    <ma:overlay.MaterialOverlay ui:field="mdlRootUI" backgroundColor="GREY_LIGHTEN_5" duration="600">
        <m:MaterialPanel backgroundColor="BLUE_DARKEN_3" textColor="WHITE" padding="35" shadow="3">
            <m:MaterialRow marginBottom="5" marginTop="-20" marginRight="-15" textAlign="RIGHT">
                <m:MaterialIcon ui:field="btnCloseUI" iconType="CLOSE"/>
            </m:MaterialRow>

            <m:MaterialRow grid="l12 m12 s12" textAlign="LEFT">
                <m:MaterialColumn grid="l8 m7 s6">
                    <m:MaterialTitle ui:field="lblTitleUI" title="Title goes here" addStyleNames="valign-wrapper"/>
                </m:MaterialColumn>
                <m:MaterialColumn grid="l4 m5 s6" textAlign="RIGHT" paddingTop="20">
                    <m:MaterialButton ui:field="btnGenerateQuestUI" text="Generate Questions"
                                      iconType="KEYBOARD_ARROW_DOWN"
                                      waves="LIGHT" backgroundColor="ORANGE_DARKEN_1" iconPosition="RIGHT"
                                      size="LARGE" fontSize="1.1em" iconFontSize="2em"
                                      activates="num-questions-selector"/>
                </m:MaterialColumn>
            </m:MaterialRow>

            <m:MaterialDropDown ui:field="pnlQuestGenDropdown" activator="num-questions-selector" constrainWidth="true"
                                belowOrigin="true" hover="true">
                <m:MaterialLink ui:field="btnGenerate5QuestsUI" waves="DEFAULT" text="5 Questions"/>
                <m:MaterialLink ui:field="btnGenerate10QuestsUI" waves="DEFAULT" text="10 Questions"/>
                <m:MaterialLink ui:field="btnGenerate15QuestsUI" waves="DEFAULT" text="15 Questions" separator="true"/>
                <m:MaterialCheckBox ui:field="chkRandomQuestsUI" text="Randomize"/>
            </m:MaterialDropDown>
        </m:MaterialPanel>


        <m:MaterialRow ui:field="pnlPreviewFrameUI" marginTop="-25" textAlign="CENTER"
                       textColor="WHITE" width="100%" height="100vh" visible="false">
            <g:Frame ui:field="pnlPreviewTargetUI" addStyleNames="{style.target-iframe}"/>
            <ma:emptystate.MaterialEmptyState ui:field="lblPreviewTargetPlaceholderUI" marginTop="250"
                                              backgroundColor="GREY_LIGHTEN_5"
                                              iconType="WARNING" textColor="BLACK" iconColor="ORANGE"/>
        </m:MaterialRow>


        <m:MaterialRow ui:field="pnlPlaceholderUI" marginTop="250" textAlign="CENTER"
                       backgroundColor="GREY_LIGHTEN_5" visible="false">
            <ma:emptystate.MaterialEmptyState ui:field="lblPlaceholderUI" backgroundColor="GREY_LIGHTEN_5"
                                              iconType="QUESTION_ANSWER" textColor="BLACK" iconColor="ORANGE"
                                              loading="true"/>
        </m:MaterialRow>

        <m:MaterialRow ui:field="pnlQuestFormUI" marginTop="100" textAlign="CENTER"
                       backgroundColor="GREY_LIGHTEN_5" textColor="BLACK" visible="false" width="70%">
            <m:MaterialRow margin="50" textAlign="CENTER">
                <m:MaterialProgress ui:field="lblQuestProgressUI" type="DETERMINATE" textColor="GREEN_LIGHTEN_3"/>
            </m:MaterialRow>
            <m:MaterialRow ui:field="pnlQuestCardsUI" textAlign="CENTER"/>
        </m:MaterialRow>

        <m:MaterialRow ui:field="pnlHiddenUI" visible="false">
            <ma:emptystate.MaterialEmptyState ui:field="pnlScorecardUI" marginTop="150" backgroundColor="GREY_LIGHTEN_5"
                                              iconType="DONE" iconColor="GREEN" textColor="BLACK"/>
        </m:MaterialRow>
    </ma:overlay.MaterialOverlay>
</ui:UiBinder>