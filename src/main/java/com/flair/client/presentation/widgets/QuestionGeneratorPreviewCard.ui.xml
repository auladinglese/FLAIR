<!DOCTYPE ui:UiBinder SYSTEM "http://dl.google.com/gwt/DTD/xhtml.ent">
<ui:UiBinder xmlns:ui="urn:ui:com.google.gwt.uibinder"
             xmlns:m="urn:import:gwt.material.design.client.ui"
>
    <ui:style>
        .card {
            margin-top: 2px;
            margin-left: 7px;
            margin-right: 7px;
            margin-bottom: 2px;

            padding: 6px;
        }

        .card-container {
            margin-top: 3px !important;
            margin-bottom: 3px !important;
            padding-bottom: 3px !important;
        }

        .option-button {
            display: inline-block;
            text-align: left !important;
        }
    </ui:style>

    <m:MaterialRow ui:field="pnlRootUI" grid="l12 m12 s12" addStyleNames="{style.card-container}">
        <m:MaterialCard ui:field="pnlCardUI" addStyleNames="{style.card}" hoverable="true"
                        backgroundColor="GREY_LIGHTEN_5" textColor="BLACK">
            <m:MaterialCardContent textAlign="LEFT" backgroundColor="GREY_LIGHTEN_5">
                <m:MaterialRow>
                    <m:MaterialLabel ui:field="lblQuestionUI" fontSize="1.9em"/>
                </m:MaterialRow>

                <m:MaterialRow marginTop="25">
                    <m:MaterialRow grid="l12 m12 s12">
                        <m:MaterialColumn grid="l1 m1 s1" paddingTop="12">
                            <m:MaterialIcon ui:field="icoAnswer1" iconType="LOOKS_ONE" iconSize="SMALL"
                                            iconColor="GREY_DARKEN_3"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="l11 m11 s11">
                            <m:MaterialButton ui:field="btnAnswer1" grid="l11 m11 s11" type="FLAT" size="LARGE"
                                              text="Placeholder 1" addStyleNames="{style.option-button}"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>

                    <m:MaterialRow grid="l12 m12 s12">
                        <m:MaterialColumn grid="l1 m1 s1" paddingTop="12">
                            <m:MaterialIcon ui:field="icoAnswer2" iconType="LOOKS_TWO" iconSize="SMALL"
                                            iconColor="GREY_DARKEN_3"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="l11 m11 s11">
                            <m:MaterialButton ui:field="btnAnswer2" grid="l11 m11 s11" type="FLAT" size="LARGE"
                                              text="Placeholder 2" addStyleNames="{style.option-button}"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>

                    <m:MaterialRow grid="l12 m12 s12">
                        <m:MaterialColumn grid="l1 m1 s1" paddingTop="12">
                            <m:MaterialIcon ui:field="icoAnswer3" iconType="LOOKS_3" iconSize="SMALL"
                                            iconColor="GREY_DARKEN_3"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="l11 m11 s11">
                            <m:MaterialButton ui:field="btnAnswer3" grid="l11 m11 s11" type="FLAT" size="LARGE"
                                              text="Placeholder 3" addStyleNames="{style.option-button}"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>

                    <m:MaterialRow grid="l12 m12 s12">
                        <m:MaterialColumn grid="l1 m1 s1" paddingTop="12">
                            <m:MaterialIcon ui:field="icoAnswer4" iconType="LOOKS_4" iconSize="SMALL"
                                            iconColor="GREY_DARKEN_3"/>
                        </m:MaterialColumn>
                        <m:MaterialColumn grid="l11 m11 s11">
                            <m:MaterialButton ui:field="btnAnswer4" grid="l11 m11 s11" type="FLAT" size="LARGE"
                                              text="Placeholder 4" addStyleNames="{style.option-button}"/>
                        </m:MaterialColumn>
                    </m:MaterialRow>
                </m:MaterialRow>
            </m:MaterialCardContent>
        </m:MaterialCard>
    </m:MaterialRow>
</ui:UiBinder> 